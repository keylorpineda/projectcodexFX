    </VBox>

    <VBox styleClass="card" spacing="18">
        <padding>
            <Insets top="24" right="24" bottom="24" left="24"/>
        </padding>
        <Label text="Detalle por espacio" styleClass="card-title"/>
        <FlowPane fx:id="spacesFlow" hgap="16" vgap="16" prefWrapLength="860"/>
    </VBox>
</VBox>
