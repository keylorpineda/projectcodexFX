            <graphic>
                <Label text="游댃" styleClass="button-icon"/>
            </graphic>
        </Button>
    </HBox>

    <HBox spacing="18">
        <VBox styleClass="metric-card" spacing="8" VBox.vgrow="ALWAYS">
            <padding>
                <Insets top="20" right="20" bottom="20" left="20"/>
            </padding>
            <Label text="Espacios monitoreados" styleClass="metric-label"/>
            <Label fx:id="monitoredSpacesLabel" text="0" styleClass="metric-value"/>
