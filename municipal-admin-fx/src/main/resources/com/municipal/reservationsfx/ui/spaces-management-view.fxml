<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.layout.ColumnConstraints?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.municipal.reservationsfx.ui.controllers.SpacesManagementController"
      spacing="24"
      styleClass="main-content"
      fillWidth="true">

    <padding>
        <Insets top="24" right="32" bottom="32" left="32"/>
    </padding>

    <HBox alignment="CENTER_LEFT" spacing="12">
        <VBox spacing="4" HBox.hgrow="ALWAYS">
            <Label text="Gestión de espacios" styleClass="page-title"/>
            <Label text="Administra todos los espacios disponibles" styleClass="page-subtitle"/>
        </VBox>
        <Button fx:id="newSpaceButton" text="Nuevo Espacio" styleClass="primary-button">
            <graphic>
                <Label text="＋" styleClass="button-icon"/>
            </graphic>
        </Button>
    </HBox>

    <VBox styleClass="card" spacing="18">
        <padding>
            <Insets top="24" right="24" bottom="24" left="24"/>
        </padding>

        <Label text="Filtros" styleClass="card-title"/>
        <GridPane hgap="16" vgap="12">
            <columnConstraints>
                <ColumnConstraints percentWidth="40"/>
                <ColumnConstraints percentWidth="20"/>
                <ColumnConstraints percentWidth="20"/>
                <ColumnConstraints percentWidth="20"/>
            </columnConstraints>
            <children>
                <TextField fx:id="searchField"
                           promptText="Busca por nombre o código"
                           GridPane.columnIndex="0"
                           GridPane.hgrow="ALWAYS"/>

                <ChoiceBox fx:id="typeFilter"
                           prefWidth="160"
                           GridPane.columnIndex="1"/>

                <ChoiceBox fx:id="capacityFilter"
                           prefWidth="160"
                           GridPane.columnIndex="2"/>

                <ChoiceBox fx:id="statusFilter"
                           prefWidth="160"
                           GridPane.columnIndex="3"/>
            </children>
        </GridPane>
    </VBox>

    <VBox styleClass="card" spacing="18">
        <padding>
            <Insets top="24" right="24" bottom="24" left="24"/>
        </padding>

        <HBox alignment="CENTER_LEFT" spacing="12">
            <Label text="Espacios" styleClass="card-title"/>
            <Label fx:id="spacesSummaryLabel" text="" styleClass="card-subtitle"/>
        </HBox>

        <TableView fx:id="spacesTable" fixedCellSize="56" columnResizePolicy="CONSTRAINED_RESIZE_POLICY">
            <columns>
                <TableColumn fx:id="nameColumn" text="Nombre" prefWidth="280"/>
                <TableColumn fx:id="typeColumn" text="Tipo" prefWidth="150"/>
                <TableColumn fx:id="capacityColumn" text="Capacidad" prefWidth="150"/>
                <TableColumn fx:id="statusColumn" text="Estado" prefWidth="140"/>
                <TableColumn fx:id="actionsColumn" text="Acciones" prefWidth="180"/>
            </columns>
        </TableView>
    </VBox>
</VBox>
