    <!-- Main Content Area -->
    <HBox spacing="0" VBox.vgrow="ALWAYS">

        <!-- Left Sidebar -->
        <VBox styleClass="sidebar" spacing="8" prefWidth="260" minWidth="240" HBox.hgrow="NEVER">
