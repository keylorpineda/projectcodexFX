                                <Label text="PrÃ³ximas reservas confirmadas" styleClass="metric-description"/>
                            </VBox>

                            <!-- No Shows -->
                            <VBox styleClass="metric-card metric-destructive" spacing="12" HBox.hgrow="ALWAYS">
                                <padding>
                                    <Insets top="20" right="20" bottom="20" left="20"/>
                                </padding>
